{
  "env": {
    "browser": true
  },
  "extends": [
    "plugin:svelte/recommended",
    "eslint:recommended"
  ],
  "overrides": [
    {
      "files": [
        "*.svelte"
      ],
      "parser": "svelte-eslint-parser",
      "parserOptions": {
        "parser": "@typescript-eslint/parser"
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "prettier"
  ],
  "rules": {
    "no-console": "warn",
    "no-unused-vars": "off",
    "prettier/prettier": "error",
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "never"
    ],
    "space-in-parens": [
      "error",
      "never"
    ],
    "svelte/no-at-html-tags": [
      "off"
    ]
  }
}